<config>
	
	<modules>
		<Maxima_Cielo>
			<version>1.5.3</version>
		</Maxima_Cielo>
	</modules>
	
	<global>
		<models>
			<Maxima_Cielo>
				<class>Maxima_Cielo_Model</class>
			</Maxima_Cielo>
		</models>
		<resources>
			<Maxima_Cielo_setup>
				<setup>
					<module>Maxima_Cielo</module>
				</setup>
				<connection>
					<use>core_setup</use>
				</connection>
			</Maxima_Cielo_setup>
			<Maxima_Cielo_write>
				<connection>
					<use>core_write</use>
				</connection>
			</Maxima_Cielo_write>
			<Maxima_Cielo_read>
				<connection>
					<use>core_read</use>
				</connection>
			</Maxima_Cielo_read>
		</resources>
		<helpers>
			<Maxima_Cielo>
				<class>Maxima_Cielo_Helper</class>
			</Maxima_Cielo>
		</helpers>
		<blocks>
			<Maxima_Cielo>
				<class>Maxima_Cielo_Block</class>
			</Maxima_Cielo>
			<sales>
				<rewrite>
					<order_totals>Maxima_Cielo_Block_Sales_Order_Totals</order_totals>
				</rewrite>
			</sales>
			<adminhtml>
				<rewrite>
					<sales_order_totals>Maxima_Cielo_Block_Adminhtml_Order_Totals</sales_order_totals>
					<sales_order_invoice_totals>Maxima_Cielo_Block_Adminhtml_Order_Invoice_Totals</sales_order_invoice_totals>
					<sales_order_view>Maxima_Cielo_Block_Adminhtml_Order_View</sales_order_view>
				</rewrite>
			</adminhtml>
		</blocks>
		<sales>
			<quote>
				<totals>
					<interest>
						<class>Maxima_Cielo/quote_address_interest</class>
						<after>shipping</after>
						<before>grand_total</before>
					</interest>
				</totals>
			</quote>
			<order_invoice>
				<totals>
					<your_total>
					<class>Maxima_Cielo/order_invoice_interest</class>
					<after>shipping</after>
					<before>grand_total</before>
					</your_total>
				</totals>
			</order_invoice>
		</sales>
		<fieldsets>
			<sales_convert_quote_address>
				<interest>
					<to_order>*</to_order>
				</interest>
				<base_interest>
					<to_order>*</to_order>
				</base_interest>
			</sales_convert_quote_address>
			<sales_convert_order>
				<interest>
					<to_invoice>*</to_invoice>
					<to_shipment>*</to_shipment>
					<to_cm>*</to_cm>
				</interest>
				<base_interest>
					<to_invoice>*</to_invoice>
					<to_shipment>*</to_shipment>
					<to_cm>*</to_cm>
				</base_interest>
			</sales_convert_order>
		</fieldsets>
	</global>
	
	<frontend>
		<routers>
			<Maxima_Cielo>
				<use>standard</use>
				<args>
					<module>Maxima_Cielo</module>
					<frontName>cielo</frontName>
				</args>
			</Maxima_Cielo>
		</routers>
		<layout>
			<updates>
				<Maxima_Cielo>
					<file>cielo.xml</file>
				</Maxima_Cielo>
			</updates>
		</layout>
		<translate>
			<modules>
				<Maxima_Cielo>
					<files>
						<default>Maxima_Cielo.csv</default>
					</files>
				</Maxima_Cielo>
			</modules>
		</translate>
	</frontend>
	
	<adminhtml>
		<translate>
			<modules>
				<Maxima_Cielo>
					<files>
						<default>Maxima_Cielo.csv</default>
					</files>
				</Maxima_Cielo>
			</modules>
		</translate>
		<acl>
			<resources>
				<admin>
					<children>
						<sales>
							<children>
								<order>
									<children>
										<actions>
											<children>
												<cielo-capture translate="title">
													<title>Cielo - Capture</title>
												</cielo-capture>
												<cielo-cancel translate="title">
													<title>Cielo - Cancel</title>
												</cielo-cancel>
												<cielo-consult translate="title">
													<title>Cielo - Consult WebService</title>
												</cielo-consult>
											</children>
										</actions>
									</children>
								</order>
							</children>
						</sales>
					</children>
				</admin>
			</resources>
		</acl>
	</adminhtml>
	
	
	<default>
		<payment>
			<Maxima_Cielo_Cc>
				<model>Maxima_Cielo_Model_Cc</model>
				<active>0</active>
				<buypage>loja</buypage>
				<environment>https://qasecommerce.cielo.com.br</environment>
				<card_types>visa,mastercard,diners,discover,elo,amex</card_types>
				<auto_capture>1</auto_capture>
				<autenticate>1</autenticate>
				<ssl_file></ssl_file>
				<title>Cartão de Crédito</title>
				<max_parcels_number>1</max_parcels_number>
				<installments_type>2</installments_type>
				<auto_capture>1</auto_capture>
				<cielo_number>1006993069</cielo_number>
				<cielo_key>25fbb99741c739dd84d7b06ec78c9bac718838630f30b112d033ce2e621b34f3</cielo_key>
			</Maxima_Cielo_Cc>
		</payment>
		<payment>
			<Maxima_Cielo_Dc>
				<model>Maxima_Cielo_Model_Dc</model>
				<active>0</active>
				<buypage>loja</buypage>
				<environment>https://qasecommerce.cielo.com.br</environment>
				<card_types>visa</card_types>
				<ssl_file></ssl_file>
				<title>Cartão de Débito</title>
				<auto_capture>1</auto_capture>
				<cielo_number>1001734898</cielo_number>
				<cielo_key>e84827130b9837473681c2787007da5914d6359947015a5cdb2b8843db0fa832</cielo_key>
			</Maxima_Cielo_Dc>
		</payment>
	</default>

</config>